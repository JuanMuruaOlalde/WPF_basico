<Window x:Class="EjemploPlantillaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploPlantillaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <StackPanel Orientation="Vertical">

        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="10,5,0,5">
                <TextBlock Text="Teclear aquí la prueba 1:" Margin="0,0,5,0" />
                <TextBox Text="{Binding textoDePrueba1}" Height="20" MinWidth="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,5,0,5">
                <TextBlock Text="Teclear aquí la prueba 2:" Margin="0,0,5,0" />
                <TextBox Text="{Binding textoDePrueba2}" Height="20" MinWidth="100"/>
            </StackPanel>
        </StackPanel>

        <StatusBar Background="LightYellow" Margin="0,30,0,0" Height="20">
            <TextBlock Text="{Binding mensajeEnLaBarraDeEstado}" />
        </StatusBar>
        
    </StackPanel>
    
</Window>
